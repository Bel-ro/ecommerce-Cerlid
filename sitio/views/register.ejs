<%- include('./partials/head.ejs') %> 
<%- include('./partials/header.ejs') %>

<main>
    <div class="container">
        <div class="login-container">
            <div class="register">
                <h2>Registro</h2>
                <% if (typeof errors != 'undefined') { %>
                 
               <ul>
                   <% errors.forEach(error =>{%>
                       <li><%= error.msg  %> </li>

                   <% }) %> 
               </ul>
               <% } %>
                <form  action="/users/register" method="POST">
                    <input type="text" placeholder="Nombre" class="nombre" name="user">
                    <input type="email" placeholder="Email" class="email" name="email">
                    <input type="password" placeholder="Contraseña" class="password" name="password">
                    <input type="password" placeholder="Confirmar contraseña" class="repass" >
                    <input type="submit" class="submit" value="REGISTRARSE">

                </form>
            </div>
                
        </div>
    </div>
</main>
<%- include('./partials/footer.ejs') %> 